
---
import '../styles/global.css';
interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-so-light text-so-forest antialiased overflow-x-hidden">
		<slot />
	</body>
</html>

<style is:global>
	.snap-container {
		height: 100vh;
		scroll-snap-type: y mandatory;
		overflow-y: scroll;
	}
	section {
		scroll-snap-align: start;
		height: 100vh;
		width: 100%;
	}
</style>